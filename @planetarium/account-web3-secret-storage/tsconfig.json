{
  "include": ["./src", "*.d.ts", "*.ts"],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "target": "ESNext",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"]
  }
}
